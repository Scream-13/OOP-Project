<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="scenepane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="t5.NotesController">
   <children>
      <TextArea fx:id="description" layoutX="57.0" layoutY="139.0" prefHeight="183.0" prefWidth="486.0" promptText="Enter the description" />
      <Label layoutX="57.0" layoutY="115.0" text="Description" />
      <TextField fx:id="title" layoutX="57.0" layoutY="79.0" prefHeight="26.0" prefWidth="486.0" promptText="Enter the title" />
      <Label layoutX="57.0" layoutY="51.0" text="Title" />
      <Button fx:id="cancelButton" layoutX="54.0" layoutY="341.0" mnemonicParsing="false" onAction="#closeButtonAction" prefHeight="26.0" prefWidth="94.0" text="Cancel">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="clearButton" layoutX="253.0" layoutY="342.0" mnemonicParsing="false" onAction="#clearButtonAction" prefHeight="26.0" prefWidth="94.0" text="Clear">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="saveButton" layoutX="450.0" layoutY="342.0" mnemonicParsing="false" onAction="#createNote" prefHeight="26.0" prefWidth="94.0" text="Save">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Label alignment="CENTER" layoutX="215.0" layoutY="23.0" prefHeight="18.0" prefWidth="170.0" text="Note">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
